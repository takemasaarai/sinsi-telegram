<% provide(:title, "Log in") %>

<h2>Let's Simpleful Insert! </h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <br />
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email  %>
  </div><br />

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div><br />

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <br />
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<br />
<%= render "devise/shared/links" %>
