<h2><b>タイトル: </b><%= @sinsi.title %></h2>
<p><b>プレビュー: </b><%= @preview.impressionist_count %> 回</p>
<p><b>最終更新日: </b><%= @sinsi.updated_at.to_s.chop.chop.chop.chop.chop %></p>

<div class="row">
  <div class="col-md-9">
    <%= image_tag(@sinsi.picture_url, width: '100%') if @sinsi.picture.present? %>
    <h4><b>説明文: </b><%= @sinsi.description %></h4>
    <div class="col-md-3">
      <p>
        <%= link_to '編集する', edit_sinsi_path(@sinsi) %> |
        <%= link_to '戻る', sinsis_path %>
      </p>
    </div>
  </div>
</div>
