<h1>投稿画像一覧</h1>

<% @sinsis.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |sinsi| %>
      <div class="col-md-4">
        <%= image_tag sinsi.picture_url(:thumb) if sinsi.picture.present? %>
        <h4><%= link_to sinsi.title, sinsi %></h4>
        <%= sinsi.description %>
      </div>
    <% end %>
  </div>
<% end %>

