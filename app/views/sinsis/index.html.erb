<% provide(:title, "Home") %>

<h2>投稿画像一覧</h2>

<% @sinsis.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |sinsi| %>
      <div class="col-md-4">
        <p id="post"><b>投稿日: </b><%= sinsi.created_at.to_s.chop.chop.chop.chop.chop.chop.chop.chop.chop %></p>
        <%= link_to image_tag(sinsi.picture_url(:thumb)), sinsi, id: 'thumbnail' if sinsi.picture.present? %>
      </div>
    <% end %>
  </div>
<% end %>
