<% if user_signed_in? %>
  <% if sinsi.like_user(current_user.id) %>
    <%= button_to sinsi_like_path(like, sinsi_id: sinsi.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.png") %>
      <span>
        <%= sinsi.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to sinsi_likes_path(sinsi), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.png") %>
      <span>
        <%= sinsi.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.png") %>
    <span>
      <%= sinsi.likes_count %>
    </span>
<% end %>
